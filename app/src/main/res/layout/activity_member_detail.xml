<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical">

    <!-- Detailvenster in PORTRAIT (<=> LANDSCAPE: member_detail) -->

    <!-- LinearLayout die de gegevens van het lid bevat (= linkse kolom van scherm) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- De gegevens van de leden onder elkaar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/detail_birthdate_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_birthdate"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/birthdate_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_address_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_address"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_postalCode_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_postalCode"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/postalCode_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_city_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_city"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/city_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_telephone_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_telephone"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/telephone_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_isntrument_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/detail_instrument"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/instrument_database"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dummyData"
                        android:textSize="20sp" />
                </LinearLayout>

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/blueTransparant" />

        </LinearLayout>


        <!-- De knoppen -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:background="@color/darkblue"
                android:text="@string/button_update"
                android:textColor="@color/lightgray" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                android:background="@color/darkred"
                android:text="@string/button_delete"
                android:textColor="@color/lightgray" />

            <ImageView
                android:id="@+id/ivPhoneCall"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/phone_call"
                android:layout_marginTop="17dp"
                android:layout_marginStart="50dp"/>


            <ImageView
                android:id="@+id/ivGoogleMaps"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/google_maps_logo"
                android:layout_marginTop="17dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>